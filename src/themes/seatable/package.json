{
    "name": "my-theme",
    "version": "1.0.0",
    "description": "## Features",
    "main": "index.js",
    "scripts": {
        "build": "tailwindcss build -i assets/css/styles.css -o assets/css/styles.output.css",
        "watch": "tailwindcss build -i assets/css/styles.css -o assets/css/styles.output.css --watch",
        "docker:hugo": "hugo server --source /hugo/src -D -E --bind=0.0.0.0",
        "pagefind:watch": "npx -y pagefind --site /hugo/src/public",
        "docker:watch": "concurrently \"npm run watch\" \"npm run docker:hugo\" \"npm run pagefind:watch\" "
    },
    "keywords": [],
    "author": "Christoph Dyllick-Brenzinger",
    "license": "ISC",
    "devDependencies": {
        "@hugomods/prettier-config": "^0.2.0",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.1.2",
        "pagefind": "^1.3.0",
        "postcss": "^8.5.3",
        "prettier": "^3.5.3",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "tailwindcss": "^3.4.17"
    }
}
