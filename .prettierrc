{
    "$schema": "http://json.schemastore.org/prettierrc",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "endOfLine": "lf",
    "goTemplateBracketSpacing": true,
    "overrides": [
        {
            "files": ["*.html", "*.gotmpl", "*.tmpl.*"],
            "options": {
                "parser": "go-template",
                "bracketSameLine": true
            }
        }
    ],
    "plugins": ["prettier-plugin-toml", "prettier-plugin-go-template", "prettier-plugin-tailwindcss"],
    "tailwindConfig": "./src/themes/seatable/tailwind.config.js",
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 180
}
